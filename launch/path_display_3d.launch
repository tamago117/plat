<?xml version="1.0"?>

<launch>
    <!--<arg name="fileName" default="way1_3d.csv"/>-->
    <!--<arg name="fileName" default="way_autoware.csv"/>-->
    <arg name="fileName" default="tsukuba2023.csv"/>
    <!--<arg name="fileName" default="3L.csv"/>-->
    <!--<arg name="fileName" default="souB.csv"/>-->
    <!--<arg name="map_pcd" value = "$(find plat)/resources/pcd/clearpath.pcd"/>-->
    <!--<arg name="map_pcd" value = "$(find plat)/resources/pcd/autoware.pcd"/>-->
    <arg name="map_pcd" value = "$(find plat)/resources/pcd/tsukuba2023_.pcd"/>
    <!--<arg name="map_pcd" value = "$(find plat)/resources/pcd/3L.pcd"/>-->
    <!--<arg name="map_pcd" value = "$(find plat)/resources/pcd/souB.pcd"/>-->

    <node name="wpLoad" pkg="eg_wptool" type="wpLoad" output="screen">
        <param name="filePath" value="$(find plat)/csv/$(arg fileName)"/>
        <param name="map_frame_id" value="map"/>
    </node>
    <!--map generate-->
    <node pkg="pcl_ros" type="pcd_to_pointcloud" name="pcd_to_pointcloud"
    args="$(arg map_pcd)" >
        <param name="frame_id" value="map" />
        <param name="latch" value="true"/>
        <remap from="cloud_pcd" to="mapcloud" />
    </node>
    <node name="wpVisualizer" pkg="eg_wptool" type="wpVisualizer">
        <param name="markerSize" value="10.0"/>
    </node>

    <arg name="rvizconfig" default="$(find plat)/rviz/path_display_3d.rviz" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

</launch>